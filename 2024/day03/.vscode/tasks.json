{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "build-current-file",
            "command": "zig",
            "args": [
                "build-exe",
                "${file}",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}